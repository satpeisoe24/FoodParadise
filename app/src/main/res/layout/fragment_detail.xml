<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DetailFragment">

    <TextView
        android:id="@+id/detailtext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brown Stew Chicken"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/c1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detailtext1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/c2"
        android:background="@color/yellow"
        app:layout_constraintHorizontal_chainStyle="spread"
        >
    <TextView
        android:id="@+id/detailtext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/c2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/darkgray"
        app:layout_constraintTop_toBottomOf="@+id/detailtext1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/c1">

        <TextView
            android:id="@+id/detailtext3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <ImageView
        android:id="@+id/detailimage"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/c2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/c3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detailimage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

<view
    android:id="@+id/view1"
    android:layout_width="1dp"
    android:layout_height="50dp"
    android:background="@color/gray"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/view2"
    app:layout_constraintBottom_toBottomOf="parent"
    />

        <view
            android:id="@+id/view2"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/view1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
           />

        <ImageView
            android:id="@+id/detailinstructionimg"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/insruction"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/view1"/>

        <TextView
            android:id="@+id/detailinstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instruction"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/detailinstructionimg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/view1"/>

        <ImageView
            android:id="@+id/detailingredientsimg"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ingredients"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/view1"
            app:layout_constraintRight_toLeftOf="@id/view2"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/detailingredientstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/view1"
            app:layout_constraintRight_toLeftOf="@id/view2"
            app:layout_constraintTop_toBottomOf="@id/detailingredientsimg"
/>

        <ImageView
            android:id="@+id/detailyoutubeimg"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/youtube"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/view2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/detailyoutube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Youtube"
            android:textStyle="bold"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@+id/detailyoutubeimg"
            app:layout_constraintLeft_toRightOf="@id/view2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/detailinstructiontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/c3"/>
        />

    <TextView
        android:id="@+id/detailinstructionid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/detailinstructiontext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>